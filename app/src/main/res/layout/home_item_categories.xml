<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"

    >

    <!-- <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/rectangle_background">-->


    <TextView
        android:id="@+id/btnMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:elevation="10dp"
        android:text="More..."
        android:textAllCaps="false"
        android:textColor="#3f51b5"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtVwCategoriestittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnMore"
        android:layout_alignBottom="@+id/btnMore"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:textStyle="bold" />


    />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyVwHomeCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtVwCategoriestittle"
        android:layout_below="@+id/btnMore"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />


    <!-- </RelativeLayout>-->

</RelativeLayout>

